{
  "name": "bs-containers",
  "version": "0.0.1",
  "description": "This is a Bucklescript port of the ocaml-containers project",
  "main": "index.js",
  "scripts": {
    "start": "bsb -w",
    "doc": "ocamldoc -html -I lib/bs/src -I doc/stdlib-cmi -d doc src/*.mli doc/stdlib-cmi/*.mli",
    "build": "bsb",
    "clean": "rm -rf lib",
    "coverage": "npm run build && nyc ava && nyc report --reporter=html",
    "test": "npm run build && ava",
    "watch:bsb": "bsb -make-world -w",
    "watch:ava": "ava -w",
    "watch:screen": "screen -c .screenrc"
  },
  "keywords": [],
  "author": "Bob Fang",
  "license": "BSD-2-Clause",
  "dependencies": {
    "bs-platform": "^1.5.1"
  },
  "devDependencies": {
    "ava": "^0.18.2",
    "nyc": "^10.1.2",
    "tap-nyan": "^1.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dorafmon/bscontainers.git"
  },
  "bugs": {
    "url": "https://github.com/dorafmon/bscontainers/issues"
  },
  "homepage": "https://github.com/dorafmon/bscontainers#readme",
  "ava": {
    "files": [
      "**/*_test.js",
      "!**/amdjs/**",
      "!**/es6/**",
      "!**/commonjs/**"
    ]
  },
  "nyc": {
    "report-dir": "./doc/coverage"
  }
}
